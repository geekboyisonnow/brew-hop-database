<p id="notice"><%= notice %></p>

<h1>List of All Bars</h1>

<table>
  <thead>
    <tr>
      <th>Bar Name</th>
      <th>Brewery Ratings Count</th>
      <th>Dive Bar Ratings Count</th>
      <th>Location / Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Phone</th>
      <th>Hours</th>
      <th>Kind of Bar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bars.each do |bar| %>
      <tr>
        <% if bar.name %>
          <td><%= link_to bar.name, edit_bar_path(bar) %></td>
        <% else %>
          <td>UNKNOWN</td>
        <% end %>
        
        <td><%= bar.brewery_ratings.count %></td>
        <td><%= 3.4 %></td>
        <td><%= bar.location %></td>
        <td><%= bar.latitude %></td>
        <td><%= bar.longitude %></td>
        <td><%= bar.phone %></td>
        <td><%= bar.hours %></td>
        <td><%= bar.kind %></td>
        <td><%= link_to 'Show', bar %></td>
        <td><%= link_to 'Edit', edit_bar_path(bar) %></td>
        <td><%= link_to 'Destroy', bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

